@model IEnumerable<WebApplication1.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Product" class="btn btn-info"><i class="fa-solid fa-plus"></i>Add New Product</a>

</p>

<form method="post">
    <div class="row">
        <div class="col-3">
            Low Price    <input type="number" name="LowAmount" class="form-control" />

        </div>
        <div class="col-3">
            Larg Price  <input type="number" name="LargAmount" class="form-control" />
        </div>

        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-primary form-control" />
        </div>
        <div class="col-3"></div>
    </div>
</form>
<br />
<table   class="table table-striped border Tb"   >
    <thead class="table table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypeId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TagesNameId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prodType.productType)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Tages.Name)
                </td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id" />

                </td>
            </tr>
        }
    </tbody>
</table>
