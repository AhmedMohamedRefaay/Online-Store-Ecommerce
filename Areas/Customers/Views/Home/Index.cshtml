@model IEnumerable<WebApplication1.Models.Products>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h1 class="m-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue">
                            @product.Name
                        </label>
                    </h1>
                </div>
                <img src="~/@product.Img" alt="Image" class="card-img-top" style="height:300px"/>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#808080">
                                <b>price: @product.Price</b>
                            </label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id"
                           class="btn btn-primary  btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

